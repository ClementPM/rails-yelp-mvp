<h1>Create a new restaurant</h1>

<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, as: :select, collection: %w(chinese italian french japanese belgium) %> 

  <%= f.submit class:'btn btn-info' %>
<% end %>  